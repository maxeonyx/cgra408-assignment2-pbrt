LookAt   0 -100 30   0 0 0   0 0 1
Rotate 15 0 0 1
Camera "perspective" "float fov" [39]
Film "image"
    "integer xresolution" [700] "integer yresolution" [700]
    "string filename" "portal-crystal.png"

Sampler "halton" "integer pixelsamples" [50]

Integrator "path" "integer maxdepth" [30]

WorldBegin

#sky
AttributeBegin
    Rotate -60 0 0 1
    LightSource "infinite"
            "string mapname" [ "textures/doge2_latlong.exr" ]
            "rgb scale" [ 1. 1. 1. ]
AttributeEnd

# PortalCrystal large absorptive Sphere
AttributeBegin
    Material "portalcrystal" "float index" [1.7] "float attenuation_length" [10]
    AttributeBegin
        Translate 20 0 0
        Rotate 30 0 0 1
        SetAbsorber
        Include "emitter_crystal.pbrt"
    AttributeEnd
    AttributeBegin
        Translate -20 0 0
        SetEmitter
        Include "emitter_crystal.pbrt"
    AttributeEnd
AttributeEnd


WorldEnd
